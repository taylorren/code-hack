{% set active=4 %}
{% extends 'layout.html.twig' %}

{% block title %}
    {{file.file}}的源代码 | 跟我一起学Hack
{% endblock %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><strong><span class="underline">{{file.file}}</span></strong>的源代码</h3><br>
            <p><small>文件创立时间：{{file.times.ct|date('Y-m-d H:i:s')}}，文件访问时间{{file.times.at|date('Y-m-d H:i:s')}}</small><br>
            <small><a href="/lib"><i class="glyphicon glyphicon-share-alt"></i> 回代码列表</a></small></p>
        </div>
        <div class="panel-body">
            <pre>{{file.src|raw}}</pre>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><strong><span class="underline">{{file.file}}</span></strong>的输出</h3>
        </div>
        <div class="panel-body">
            <pre>{{file.out}}</pre>
        </div>
    </div>

{% endblock %}