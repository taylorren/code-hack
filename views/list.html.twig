{% set active=4 %}
{% extends 'layout.html.twig' %}

{% block title %}
    代码列表 | 跟我一起学Hack
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover table-striped">
                {% for file in files %}
                    <tr>
                        <td>
                            <p><a href="/demo/{{file.file|trim('.php')}}">{{file.file}}</a>
                        </td>
                        <td>
                            {% for d in file.desc %}
                                {{d|raw}}
                            {% endfor %}
                        </td>
                    </tr>

                {% endfor %}
            </table>
        </div>
    {% endblock %}